<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookLibraryMobileApp.MainPage"
             BackgroundColor="White">

    <StackLayout Padding="10" Spacing="20" VerticalOptions="Center">
        <Label Text="Book Library" 
               FontSize="24" 
               HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="View Library" 
                    Clicked="OnViewLibraryClicked" 
                    WidthRequest="150" 
                    HeightRequest="50" />
            <Button Text="Author Details" 
                    Clicked="OnAuthorDetailsClicked" 
                    WidthRequest="150" 
                    HeightRequest="50" />
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>
