<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookLibraryMobileApp.BookPage"
             Title="Book Details"
             BackgroundColor="White">
    <StackLayout Padding="10" Spacing="10">
        <Label x:Name="TitleLabel" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label x:Name="AuthorLabel" FontSize="18" HorizontalOptions="Center" />
        <Label x:Name="YearLabel" FontSize="16" HorizontalOptions="Center" />
        <Label x:Name="PublisherLabel" FontSize="16" HorizontalOptions="Center" />
        <Label x:Name="PagesLabel" FontSize="16" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
